
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions للتحقق من الصلاحيات
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // This function assumes user roles are stored in a 'role' field in their user document.
    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isAuthenticated() && getRole() == 'admin';
    }
    
    function isEditor() {
        return isAuthenticated() && (getRole() == 'admin' || getRole() == 'editor');
    }

    // --- RULES ---
    
    // Users can read their own data. Admins can read/write any user data.
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    // Most collections should be readable by any authenticated user, but only writable by editors/admins.
    match /clients/{docId} {
      allow read: if isAuthenticated();
      allow write: if isEditor();
    }
    
    match /suppliers/{docId} {
       allow read: if isAuthenticated();
       allow write: if isEditor();
    }

    match /bookings/{docId} {
       allow read: if isAuthenticated();
       allow write: if isEditor();
    }
    
     match /visaBookings/{docId} {
       allow read: if isAuthenticated();
       allow write: if isEditor();
    }
    
    match /subscriptions/{docId} {
         allow read: if isAuthenticated();
         allow write: if isEditor();
    }
    
     match /journal-vouchers/{docId} {
         allow read: if isAuthenticated();
         allow write: if isEditor();
    }
    
    // Allow any authenticated user to create these documents
    match /reconciliation_logs/{docId} {
        allow read, create: if isAuthenticated();
        allow write, delete: if isAdmin();
    }
    
     match /audit_logs/{docId} {
        allow read, create: if isAuthenticated();
        allow write, delete: if isAdmin();
    }
    
    match /notifications/{docId} {
        allow read, write: if isAuthenticated(); // Users manage their own notifications
    }
    
    // Settings and roles can only be modified by admins.
     match /settings/{docId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
    }
     match /roles/{docId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
    }
     match /sequences/{docId} {
        allow read, write: if isAuthenticated(); // Allow server-side functions to update
    }


    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
